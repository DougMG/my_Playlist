<section class="section has-text-white">

  <br/>

  <h2 class="is-size-5 has-text-weight-bold">Playlists</h2>

  <br/><br/>

  <% @playlists.each do |p| %>
  <div class="columns is-multiline songs">
    <div class="column is-full has-text-left song-item">
      <div class="columns is-mobile">    
        <div class="column is-2-mobile is-1-desktop play-button">
          <%= link_to "#", class: "has-text-white" do %>
            <i class="fas fa-play-circle fa-2x"></i>
          <% end %>
        </div>
        <div class="column">
            <h2 class="is-size-5">Nome: <%= p["name"] %></h2>
            <p>Descrição: <%= p["description"] %></p>
        </div>
      </div>
    </div>
  </div>
  <% end %>
</section>

